/**
 * @param AccountInterface $account
 * @throws Exception
 */
function hello_user_logout(AccountInterface $account) {
    $database = \Drupal::database();
    $database->insert('hello_user_statistics')
        ->fields([
            'uid' => $account->id(),
            'action'=> '0',
            'time' => REQUEST_TIME,
        ])
        ->execute();

}